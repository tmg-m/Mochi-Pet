<div>
    <form action="/user/{{user._id}}/userEdit" method="POST">
        <h4>Edit User</h4>
        <input type="text" name="username" id="username" placeholder="Insert username">
        <input type="text" name="name" id="name" placeholder="Insert your name">
        <input type="email" name="email" id="email" placeholder="Insert email">
        <input class="botons" type="submit" value="Edit">
        {{#if errorMessage}}
        <span style="background-color: rgb(255, 51, 51);
            color: white;">
            {{errorMessage}}
        </span>
        {{/if}}
        <button><a href="/user/{{user._id}}">back</a></button>
    </form>
</div>