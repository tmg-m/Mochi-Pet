
<div class="pet-create-container">
    <form action="/pet/pet-create" method="POST" enctype="multipart/form-data">
        <h4>Your pet</h4>
        <select class="user-form gap" name="petCategory" id="petCategory">
            <option selected>Category</option>
            <option Value="Dog">Dog</option>
            <option value="Cat">Cat</option>
            <option value="Hamster">Hamster</option>
            <option value="Fish">Fish</option>
            <option value="Bird">Bird</option>
            <option value="Other">Other</option>
        </select>
        <div class="gap">
            <div>
                <label for="Male">Male</label>
                <input type="radio" name="petGender" id="male" value="Male">
            </div>
            <div>
                <label for="Male">Female</label>
                <input type="radio" name="petGender" id="female" value="Female">
            </div>
        </div>
        <input class="user-form gap" type="text" name="petName" id="petName" placeholder="Name">
        <input class="user-form gap" type="number" name="petAge" id="petAge" placeholder="Age" min="0" max="100">
        <input class="user-form gap" type="text" name="petColor" id="petColor" placeholder="Color">
        <input class="user-form gap" type="text" name="address" id="address" placeholder="address">
        <input class="user-form gap" type="text" name="city" id="city" placeholder="City">
        <input class="gap" type="file" name="petProfile-Image" />
        <input class="auth-btn gap" class="botons" type="submit" value="Add">
    </form>
    <a class="auth-btn gap" href="/">back</a>
    {{#if errorMessage}}
    <span style="background-color: rgb(255, 51, 51);
                color: white;">
        {{errorMessage}}
    </span>
    {{/if}}
</div>
{{> nav}}