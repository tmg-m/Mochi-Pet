<h1>pet create</h1>
<div class="SignUp-container">
    <form action="/pet-create" method="POST">
        <h4>Your pet</h4>
        <input type="text" name="petName" id="petName" placeholder="Your pet name">
        <input type="text" name="petType" id="petType" placeholder="Type(dog,cat,etc">
        <input type="text" name="petGender" id="petGender" placeholder="Gender">
        <input type="text" name="petColor" id="petColor" placeholder="Color">
        <input class="botons" type="submit" value="Create">
        {{#if errorMessage}}
        <span style="background-color: rgb(255, 51, 51);
            color: white;">
            {{errorMessage}}
        </span>
        {{/if}}
    </form>
    <button><a href="/">back</a></button>
</div>