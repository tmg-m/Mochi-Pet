<div class="petDetail-container">
    <img class="pet-img-size" src="{{pet.imageUrl}}" alt="ggwp">
    <p>Category: {{pet.petCategory}}</p>
    <p>Gender: {{pet.petGender}}</p>
    <p>Name: {{pet.petName}}</p>
    <p>Color: {{pet.petColor}}</p>
    <p>Age: {{pet.petAge}}</p>
    <p>Address: {{pet.address}}</p>
    <p>City: {{pet.city}}</p>
    {{#if isOwner}}
    <form action="/pet/{{pet._id}}/edit" method="get">
        <button class="auth-btn gap" >Edit</button>
    </form>
    {{/if}}
</div>
{{> nav}}